pipeline {
    agent any

    stages {
        
        stage('Welcome to master'){
            steps{
                echo 'Start Program'
            }
        }
        
        stage('Tigger the Slave Jobs') {
            steps {
                echo 'Start Trigger to send name and age to slave'
                script {
                    def outputString = sh(script: 'python3 myscript.py Alice 30', returnStdout: true).toString().trim()
                    echo '${outputString}'
                }
                build job: 'slave', parameters: [string(name: 'name', value: '${outputString}'), string(name: 'age', value: '20')]
            }
        }
    }
}
