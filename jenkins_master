pipeline {
    agent any
    
    parameters {
        string(name: 'name', defaultValue: 'name', description: 'Enter your name')
        string(name: 'age', defaultValue: 'age', description: 'Enter your age')
    }

    stages {
        
        stage('Welcome to master'){
            steps{
                echo 'Start Program'
            }
        }
        
        stage('Tigger the Slave Jobs') {
            steps {
                echo 'Start Trigger to send name and age to slave'
                sh 'python3 myscript.py Alice 30'
                build job: 'slave', parameters: [string(name: 'name', value: '${name}'), string(name: 'age', value: '${age}')]
            }
        }
    }
}
