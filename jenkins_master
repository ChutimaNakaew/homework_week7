pipeline {
    agent any

    stages {
        
        stage('Welcome to master'){
            steps{
                echo 'Start Program'
            }
        }
        
        stage('get name'){
            steps{
                def name = sh (returnStdout:true, script:'info.py name').trim()
                echo 'name = $name'
            }
        }
        
        stage('get age'){
            steps{
                def age = sh (returnStdout:true, script:'info.py age').trim()
                echo 'age = $age'
            }
        }
        
        stage('Tigger the Slave Jobs') {
            steps {
                echo 'Start Trigger to send name and age to slave'
                sh 'python3 myscript.py ${name} ${age}'
                build job: 'slave', parameters: [string(name: 'name', value: name), string(name: 'age', value: age)]
            }
        }
    }
}
