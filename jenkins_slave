pipeline {
    agent any
    parameters {
        string(name: 'name', defaultValue: 'fah', description: 'Enter your name')
        string(name: 'age', defaultValue: '22', description: 'Enter your age')
    }
    stages {
        stage('Example') {
            steps {
                echo "Hello ${params.name} age ${params.age}"
                sh 'python3  myscript.py'
            }
        }
    }
}
